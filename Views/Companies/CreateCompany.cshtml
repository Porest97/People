@model Company

@{
    ViewData["Title"] = "CreateCompany";
}

<div class="card">
    <div class="card-header">
        <h6>Create Company</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateCompany">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CenterNumber" class="control-label"></label>
                        <input asp-for="CenterNumber" class="form-control" />
                        <span asp-validation-for="CenterNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyName" class="control-label"></label>
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a class="btn tbn-sm btn-success" asp-controller="Home" asp-action="Index">Home</a>
        <a class="btn tbn-sm btn-success" asp-controller="Home" asp-action="Companies">To Companies</a>
        <a class="btn tbn-sm btn-success" asp-controller="Companies" asp-action="IndexCompanies">Back To Companies List</a>
    </div>
</div>