@model Company

@{
    ViewData["Title"] = "DetailsCompany";
}

<div class="card">
    <div class="card-header">
        <h6>Company details</h6>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CenterNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CenterNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CompanyName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CompanyName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
    </div>
    <div class="card-footer">
        <a class="btn tbn-sm btn-success" asp-controller="Companies" asp-action="EditCompany" asp-route-id="@Model.Id">Edit this company?</a>
        <a class="btn tbn-sm btn-success" asp-controller="Companies" asp-action="IndexCompanies">Back To Companies List</a>
        <a class="btn tbn-sm btn-success" asp-controller="Home" asp-action="Companies">To Companies</a>
        <a class="btn tbn-sm btn-success" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</div>